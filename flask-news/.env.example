# LLM Configuration
# Choose which LLM to use: 'openai' or 'ollama'
LLM_TYPE=openai

# OpenAI API Configuration (when LLM_TYPE=openai)
# OPENAI_API_KEY=your_openai_api_key_here

# Ollama Configuration (when LLM_TYPE=ollama)
# Note: Do not add /v1 suffix - OpenAI client adds it automatically
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# SerpApi Configuration (for Google Patents search)
# Get your free API key at https://serpapi.com/
# SERPAPI_KEY=your_serpapi_key_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
